  "keywords": [
    "cli",
    "command",
    "line",
    "npm",
    "scripts",
    "postgrator",
    "postgres",
    "sql",
    "migrator",
    "migration",
    "runner",
    "mysql",
    "sql",
    "import",
    "files",
    "server",
    "version control",
    "source control"
  ],
  "license": "MIT",
  "dependencies": {
    "command-line-args": "^5.2.0",
    "command-line-usage": "^6.1.1",
    "cosmiconfig": "^7.0.1",
    "p-tap": "^4.0.0",
    "postgrator": "^5.0.0"
  },
  "devDependencies": {
    "crlf": "^1.1.1",
    "dirname-filename-esm": "^1.1.1",
